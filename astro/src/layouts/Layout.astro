---
export interface Props {
	title: string;
}

const { title } = Astro.props;

import "bootstrap/dist/css/bootstrap.min.css";
import SearchForm from '../components/SearchForm.astro';
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="/icons/play_store_512.png" />
		<meta name="generator" content={Astro.generator} />
		<link rel="manifest" href="/app.webmanifest">
		<meta name="theme-color" content="#da62c4">
		<link rel="apple-touch-icon" href="/icons/play_store_512.png">
		<title>{title}</title>
	</head>
	<body>
		<main>
			<div class="container-xxl">
				<h2 class="mt-3 text-gradient"><a href="/">Just Content!</a></h2>
				<p class="lead">
					Enter the url of the content you want to see below.
				</p>
				<SearchForm></SearchForm>
				<slot />
				<pre id="share-content"></pre>
			</div>
		</main>
	</body>
</html>

<style is:global>
	:root {
		--accent-gradient: linear-gradient(45deg, rgb(124, 58, 237), #da62c4 30%, white 60%);
		font-size: 120%;
	}

	h1, h2 {
		font-weight: 800;
	}

	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
		font-size: 3rem;
	}
</style>

<script>
	if ('serviceWorker' in navigator) {
		navigator.serviceWorker.register('/service-worker.js');
	}

	window.addEventListener('DOMContentLoaded', () => {
		let output = JSON.stringify(window.location, null, '\t');
		output += JSON.stringify(new URL(window.location).searchParams, null, '\t');
		document.getElementById('share-content').innerHTML = output;
		
	});
</script>
